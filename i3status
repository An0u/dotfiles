        format = "<span background='#ebcb8b'> Ó§ï %volume </span>"
        format_muted = "<span background='#ebcb8b'> Ó§î Muted </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
        format = "%status %percentage %remaining"
        format = "<span background='#c5e765'>%status %percentage %remaining</span>"
	format_down = "No battery"
        status_chr = "‚ö° CHR"
        status_bat = "üîã BATT"
        status_unk = "? UNK"
        status_full = "‚òª FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
	
}

tztime local {
		format = "<span background='#81a1c1'> %time </span>"
		format_time = "Ó§ß %a %-d %b %H:%M"
}
